<% 3.times do |f| %>

        <!-- 願望 unit -->
        <div class="wish-unit">

          <div class="wish-info">

            <!-- 願望日期 -->
            <div class="date">
              <span><i class="fa fa-calendar"></i> <%= lorem.date %></span>
            </div>

            <!-- 數據 -->
            <div class="numbers">
              <div class="left">
                <span class="title">曝光次數</span><br/>
                <span class="num"><%= rand(1000) %></span>
              </div>
              <div class="center">
                <span class="title">關注人數</span><br/>
                <span class="num"><%= rand(500) %></span>
              </div>
              <div class="right">
                <span class="title">剩餘天數</span><br/>
                <span class="num"><%= rand(10) %></span>
              </div>
            </div>

            <!-- 願望內容 -->
            <div class="wish-content">
              <div class="wraper">
                <span><%= data.event.content %></span>
              </div>
              <div class="wish-category">
                <span><i class="fa fa-dribbble"></i> 運動</span>
              </div>
              <div class="wish-location">
                <span><i class="fa fa-map-marker"></i> 華納威秀廣場</span>
              </div>
            </div><!-- e/o wish-content -->

            <!-- 刪除願望 -->
            <div class="button">
              <button class="follow" type="button"><i class="fa fa-star-o fa-lg"></i> 關注願望</button>
            </div>

          </div>

        </div><!-- e/o wish-unit -->

<% end %>
