<div id="wish-maker" class="detail trans-1s off-canvas box-shadow">
  <!-- panelNav -->
  <div class="back">
    <a class="panelNav" href="#"><i class="fa fa-arrow-left"></i> 取消</a>
  </div>

  <!-- category -->
  <div class="category trans-05s">
    <div class="icon">
      <i class="fa fa-info-circle fa-lg"></i>
    </div>
    <div class="info">
      <h4>類型</h4>
      <select class="form-control">
        <option>聊天喝咖啡 <i class="fa fa-coffee"></i></option>
        <option>美食鑑賞會</option>
        <option>K 歌大會</option>
        <option>Home Party</option>
      </select>
    </div>
  </div>

  <!-- location -->
  <div class="location trans-05s">
    <div class="icon">
      <i class="fa fa-map-marker fa-lg"></i>
    </div>
    <div class="info">
      <h4>地點</h4>
      <div class="input-group">
        <input type="text" class="form-control" name="q" value="" placeholder="尋找附近地點...">
        <span class="input-group-btn">
          <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
        </span>
      </div>
    </div>
  </div>

  <!-- time -->
  <div class="time trans-05s">
    <div class="icon">
      <i class="fa fa-clock-o fa-lg"></i>
    </div>
    <div class="info">
      <h4>希望時間</h4>
      <div class="input-group">
        <input type="date" class="form-control" name="q" value="" placeholder="輸入希望的時間">
        <span class="input-group-btn">
          <button class="btn btn-default"><span class="fa fa-calendar"></span></button>
        </span>
      </div>
    </div>
  </div>

  <div class="list trans-05s">
    <div class="qrow">
      <div class="icon">
        <i class="fa fa-comments-o fa-lg"></i>
      </div>
      <div class="info">
        <h4>對活動的期望</h4>
        <textarea class="form-control" rows="3"></textarea>
      </div>
    </div>
  </div>

  <!-- host button -->
  <a href="#login" class="button trans-05s" data-toggle="modal" data-target="#login-form">
    <i class="fa fa-heart"></i> Make a Wish
  </a>

</div>
